.agents
  flex-direction column
  h2
    font-size 35px
    line-height 50px
    margin-bottom 5vh
    @media mobile 
        text-align center
  .agents-profiles-container
    display flex
    align-items center
    justify-content flex-start
    flex-wrap wrap
    @media mobile
      justify-content center
    article
      width 25%
      min-height 200px
      background $blue-color
      color white
      padding 30px
      margin-right 30px
      border-radius 16px
      margin-bottom 30px
      @media tablet
          width 35%
          margin-right 15px
          margin-bottom 15px
          min-height 250px
      @media mobile
          width 100%
          margin-right 0px
          margin-bottom 30px
          min-height 200px
      h3
        font-size 24px
        line-height 32px
        margin-bottom 20px
        @media mobile
          font-size 20px
          line-height 28px
      p
        font-size 16px
        line-height 26px
        @media mobile
          font-size 14px
          line-height 22px
