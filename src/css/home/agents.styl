.agents
  flex-direction column
  h2
    font-size 35px
    line-height 50px
    margin-bottom 5vh
  .agents-profiles-container
    display flex
    align-items center
    justify-content flex-start
    flex-wrap wrap
    article
      width 25%
      min-height 200px
      background $blue-color
      color white
      padding 30px
      margin-right 30px
      border-radius 16px
      margin-bottom 30px
      @media tablet
          width 35%
          margin-right 15px
          margin-bottom 15px
          min-height 250px
      h3
        font-size 24px
        line-height 32px
        margin-top 10px
        margin-bottom 20px
      p
        font-size 16px
        line-height 26px
        margin-bottom 10px
